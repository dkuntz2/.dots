#!/bin/bash

if [[ "$1" == "stag" || "$1" == "staging" ]]; then
    shift
    terraform workspace select staging $@
elif [[ "$1" == "prod" || "$1" == "production" || "$1" == "default" ]]; then
    shift
    terraform workspace select default $@
elif [[ "$1" == "upgrade" ]]; then
    shift
    terraform init -upgrade
elif [[ "$1" == "workspaces" ]]; then
    shift
    terraform workspace list $@
else
    terraform $@
fi

